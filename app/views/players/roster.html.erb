<%= render 'shared/content_title', title: 'Roster' %>

<% @teams.each do |team| %>
  <h4><%= team.name %></h4>
  <% if !team.players.empty? %>
    <table class="table table-striped table-bordered table-condensed">
      <tr>
          <th class="col-xs-1">Number</th>
          <th class="col-xs-5">Name</th>
          <th class="col-xs-4">Position</th>
          <th class="col-xs-2">Grad Year</th>
      </tr>
      <% team.players.sort {|a,b| a.number <=> b.number}.each do |player| %>
        <tr>
          <td class="text-center"><%= player.number %></td>
          <td><%= "#{player.first_name} #{player.last_name}" %></td>
          <td><%= player.position %></td>
          <td><%= player.grad_year %></td>
        </tr>
      <% end %>
    </table>
  <% else %>
    <h5>There are no players on this roster</h5>
  <% end %>
<% end %>