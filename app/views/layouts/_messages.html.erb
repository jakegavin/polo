<div class="row">
<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <div class="col-xs-12">
      <div class="alert alert-<%= name == :notice ? "success" : "danger" %>">
        <a class="close" data-dismiss="alert">&#215;</a>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      </div>
    </div>
  <% end %>
<% end %>
</div>
