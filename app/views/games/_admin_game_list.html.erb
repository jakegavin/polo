<% if !games.empty? %>
  <table class="table">
    <tr>
      <th>Tournament</th>
      <th>Date</th>
      <th>Time</th>
      <th>Team</th>
      <th>Opponent</th>
      <th>Pool</th>
      <th>H/A</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
    <% games.each do |game| %>
      <tr>
        <td><%= game.tournament.name %></td>
        <td><%= game.date %></td>
        <td><%= game.time %></td>
        <td><%= game.team.name %></td>
        <td><%= game.opponent %></td>
        <td><%= game.pool %></td>
        <td><%= game.ha %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Delete', game, confirm: "Are you sure you want to delete this game?", method: :delete %></td>
      </td>
    <% end %>
  </table>
<% else %>
  <h5>There are no games.</h5>
<% end %>
